<script>
    replaceButton();
    function replaceButton() {
      const oldButtons = document.querySelectorAll('#link');
      oldButtons.forEach(oldButton => {
        const button = document.createElement('a');
        button.setAttribute('type', 'button');
        button.setAttribute('href', 'www.google.com');
        button.setAttribute('rel', 'noreferrer');
        button.setAttribute('target', '_blank');
        button.textContent = 'Call';
  
        button.style.width = 'fit-content';
        button.style.color = '#ff7368';
        button.style.borderColor = '#ff7368';
        button.style.outlineColor = '#ff7368';
        button.style.borderRadius = '100vw';
  
        // Add hover effect
        button.addEventListener('mouseenter', function() {
          button.style.backgroundColor = '#ff7368';
          button.style.color = 'white';
        });
  
        // Remove hover effect
        button.addEventListener('mouseleave', function() {
          button.style.backgroundColor = 'transparent';
          button.style.color = '#ff7368';
        });
        oldButton.parentNode.replaceChild(button, oldButton);
      });
    }
  </script>

